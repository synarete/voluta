Summary: Voluta
Name: voluta
Version: @VERSION@
Release: @RELEASE@.@REVISION@%{?dist}
License: GPLv3
Group: Development/Tools
URL: https://voluta.org
Source: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}.%{_arch}
Requires: libcap
Requires: libuuid
Requires: libunwind
Requires: libgcrypt
Requires: python3

%{?systemd_requires}
%define docrootdir %{buildroot}/%{_docdir}/%{name}-%{version}

%description
Voluta: an encrypted data vault.

%package devel
Summary: Voluta devel
Group: Development/Tools
Requires: libcap-devel
Requires: libuuid-devel
Requires: libgcrypt-devel
Requires: libunwind-devel

%description devel
Development files for voluta


%prep
%setup -q

%build
%configure --docdir=%{docrootdir}
%{__make}

# TODO: Have fast-check by default, and '--full' for developer
# %check
# %{__make} check

%install
%make_install

%clean
%{__rm} -rf %{buildroot}

%files
%defattr(-, root, root)
%{_bindir}/%{name}
%{_bindir}/%{name}-vfstest
%{_sbindir}/%{name}-mountd
%exclude %{_bindir}/%{name}-unitest
%exclude %{_libdir}/lib%{name}*.la
%config(noreplace) %{_sysconfdir}/%{name}/*.conf
%{_mandir}/man1/%{name}.1*
%{_mandir}/man8/%{name}-*.8*
%{_datarootdir}/bash-completion/completions/%{name}
%{_unitdir}/%{name}-mountd.service

%files devel
%defattr(-, root, root)
%{_includedir}/%{name}/*.h
%{_libdir}/lib%{name}*.so*
%{_libdir}/lib%{name}*.a


%post
%systemd_post %{name}-mountd.service

%preun
%systemd_preun %{name}-mountd.service

%postun
%systemd_postun_with_restart %{name}-mountd.service

%changelog
* @RPMDATE@ Voluta <synarete@xxxxxxxx> @VERSION@-@RELEASE@
- Release @REVISION@


